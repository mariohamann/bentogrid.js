---
import { Code } from "astro/components";
import GridCode from "../../components/GridCode.astro";
---

<h3>Example 1: Unstyled Fillers</h3>
<style is:global>
	.bentogrid > * {
		@apply rounded-sm border border-gray-400 bg-sand-200;
	}
	.bentogrid > .bento-filler {
		@apply bg-black;
	}
</style>

<style is:global>
	#bentogrid-elements-fillers > .bento-filler {
		all: unset;
	}
</style>
<script>
	import BentoGrid from "@bentogrid/core";
	new BentoGrid({
		cellGap: 6,
		target: "#bentogrid-elements-fillers",
		columns: 8,
		aspectRatio: 1,
	});
</script>

<GridCode>
	<div id='bentogrid-elements-fillers' class='bentogrid w-1/2 flex-shrink-0'>
		<div data-bento='2x2'></div>
		<div data-bento='1x1'></div>
		<div data-bento='2x3'></div>
		<div data-bento='2x1'></div>
		<div data-bento='3x3'></div>
		<div data-bento='1x4'></div>
		<div data-bento='2x2'></div>
	</div>
	<div>
		<Code
			code={`#bentogrid > *[data-bento] {
  @apply bg-sand-200;
}`}
			lang='postcss'
			theme='dark-plus'
		/>
	</div>
</GridCode>
